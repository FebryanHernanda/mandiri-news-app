<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F6FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <!-- HEADER -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_mandiri_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:text="Mandiri News"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2A44"
            android:paddingStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- SECTION TITLE -->
    <TextView
        android:text="Berita Terkini"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2A44"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- HEADLINE CARD -->
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- IMAGE FULL WIDTH -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgHeadline"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageTop"/>

                <!-- TEXT AREA -->
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvHeadlineTitle"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2A44"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- SOURCE + DATE -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvHeadlineSource"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvHeadlineDate"
                            android:textSize="13sp"
                            android:textColor="#9CA3AF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- SECTION TITLE -->
    <TextView
        android:text="Semua Berita"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2A44"
        android:padding="24dp"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNews"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>


